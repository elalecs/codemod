{
    "name": "gesta/codemod",
    "description": "PHP Code Modification Tool",
    "type": "project",
    "require": {
        "nikic/php-parser": "^4.19",
        "symfony/console": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "humbug/box": "^4.6",
        "pestphp/pest": "^2.36"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CodeModTool\\": "src/"
        }
    },
    "scripts": {
        "build": [
            "composer install --no-dev",
            "./box.phar compile"
        ],
        "post-install-cmd": "@box-install",
        "post-update-cmd": "@box-install",
        "box-install": "bash install-box.sh"
    },
    "bin": ["bin/codemod"],
    "config": {
        "allow-plugins": {
            "humbug/box": true,
            "pestphp/pest-plugin": true
        }
    }
}
